%h2{ style: 'margin-left:160px' } Connexion au compte iDocus

%hr

- if flash[:alert].present?
  - error_class = 'error'
  .alert.alert-error
    %a.close{ data: { dismiss: 'alert' } } Ã—
    = flash[:alert].capitalize
- else
  - error_class = ''

= simple_form_for resource, url: session_path(resource_name), html: { class: 'form form-horizontal' } do |f|
  = f.input :email, label: 'E-mail :', wrapper_html: { class: error_class }
  = f.input :password, label: 'Mot de passe :', wrapper_html: { class: error_class }
  .control-group
    .controls
      = f.check_box :remember_me, class: 'pull-left'
      = f.label :remember_me, 'Se souvenir ? (3 jours maximum)', class: 'control-label', style: 'padding:0;padding-top:1px;margin-left:5px;text-align:left;width:180px;'
  .form-actions.padding0bottom
    = f.submit 'Connexion', class: 'btn btn-primary pull-left'
