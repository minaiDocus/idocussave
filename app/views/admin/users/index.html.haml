#users
  = render partial: 'navigation'

  .row-fluid.margin1bottom
    .span12
      %h3 Liste des utilisateurs (#{@users.count})

  .row-fluid
    .span9
      = render partial: 'shared/list_options', locals: { collection: @users }
      %table.table.table-bordered.table-condensed.table-striped.margin1top.margin0bottom
        %thead
          %tr
            %th
            %th= sortable :created_at, t('mongoid.models.common.attributes.created_at'), { user_contains: user_contains }
            %th= sortable :updated_at, t('mongoid.models.common.attributes.updated_at'), { user_contains: user_contains }
            %th= sortable :code, t('mongoid.models.user.attributes.formatted_identifier'), { user_contains: user_contains }
            %th= t('actions.name').singularize
        %tbody
          - @users.each do |user|
            %tr
              %td= user.inactive? ? icon_not_ok : nil
              %td= l(user.created_at)
              %td= l(user.updated_at)
              %td= user.info
              %td= link_to icon_show, admin_user_path(user), alt: t('actions.show'), title: t('actions.show')
      = render partial: 'shared/list_options', locals: { collection: @users }
    .span3.well
      = render partial: 'sidebar'
