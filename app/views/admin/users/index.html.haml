#users
  .row-fluid.margin1bottom
    .float-left
      %h3 Liste des utilisateurs (#{@users_count})
    .float-right
      = link_to 'Export CSV', admin_users_path(format: 'csv', direction: sort_direction, sort: sort_column, user_contains: @user_contains), class: 'btn btn-primary'

  .row-fluid
    .col-8
      = render partial: 'shared/list_options', locals: { collection: @users }
      %table.table.table-bordered.table-condensed.table-striped.margin1top.margin0bottom
        %thead
          %tr
            %th
            %th= sortable :created_at, t('activerecord.models.common.attributes.created_at'), { user_contains: @user_contains }
            %th= sortable :updated_at, t('activerecord.models.common.attributes.updated_at'), { user_contains: @user_contains }
            %th= sortable :code, t('activerecord.models.user.attributes.formatted_identifier'), { user_contains: @user_contains }
            %th= t('actions.name').singularize
        %tbody
          - @users.each do |user|
            %tr
              %td= user.inactive? ? icon_not_ok : nil
              %td= l(user.created_at)
              %td= l(user.updated_at)
              %td= user.info
              %td= link_to icon_show, admin_user_path(user), alt: t('actions.show'), title: t('actions.show')
      = render partial: 'shared/list_options', locals: { collection: @users }
    .col-3
      = render partial: 'sidebar'
