.row-fluid
  .span12.well
    %h3 Filtres

    %br
    = form_tag admin_organizations_path, method: :get, html: { class: 'form form-vertical' } do
      = hidden_field_tag :direction, sort_direction
      = hidden_field_tag :sort, sort_column
      = hidden_field_tag :per_page, per_page
      = label_tag 'organization_contains[name]', t('mongoid.models.doc_group.attributes.name')
      = text_field_tag 'organization_contains[name]', (params[:organization_contains][:name] rescue ''), class: 'span12'
      = label_tag 'organization_contains[description]', t('mongoid.models.doc_group.attributes.description')
      = text_field_tag 'organization_contains[description]', (params[:organization_contains][:description] rescue ''), class: 'span12'
      %br
      = submit_tag t('filters.action'), class: 'btn'
      = link_to t('filters.reset'), admin_organizations_path, class: 'btn'