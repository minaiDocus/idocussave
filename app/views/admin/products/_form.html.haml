.row-fluid
  .span12.well
    %h2 Informations
    %br
      = simple_form_for [:admin, @product], html: { class: 'form form-horizontal' } do |f|
        = f.input :title, label: 'Titre'
        = f.input :position, as: 'integer'
        = f.input :price_in_cents_wo_vat, as: 'integer', label: 'Prix (en centimes)'
        = f.input :is_a_subscription, as: 'boolean', label: 'Abonnement ?'
        = f.input :require_billing_address, as: 'boolean', label: 'Adresse de facturation requise ?'
        .row-fluid
          .span12
            = f.input :description, as: 'text', input_html: {  :style =>"width:100%" }
        .row-fluid
          .span12
            = f.input :header_info, as: 'text', label: "Informations d'entÃªte de page :", input_html: { :style =>"width:100%" }
        .row-fluid
          .span12
            = f.input :footer_info, as: 'text', label: 'Informations de pied de page :', input_html: {:style =>"width:100%"}
        %br
        .form-actions
          = f.submit t('actions.submit'), class: 'btn'
        