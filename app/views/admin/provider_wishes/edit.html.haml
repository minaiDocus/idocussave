#provider_wish.edit
  .row-fluid
    .span12
      = render 'layouts/admin/retriever/navigation'

  .row-fluid
    .span12.panel
      %h3 Raison du rejet

  .row-fluid
    .span12.panel
      = simple_form_for @provider_wish, url: reject_admin_fiduceo_provider_wish_path(@provider_wish), html: { class: 'form form-horizontal margin0 padding1top' } do |f|
        = f.input :message, as: 'text', input_html: {  :style =>"width:100%" }
        .form-actions.margin0bottom
          = f.submit t('actions.submit'), class: 'btn btn-primary'
          = link_to t('actions.cancel'), admin_fiduceo_provider_wishes_path, class: 'btn'
