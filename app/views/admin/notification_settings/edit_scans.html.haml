#notification_settings.edit_scans
  .row-fluid
    .span12.panel
      %h3 Edition du paramétrage des notifications pour les livraisons non effectués de numérisation

  .row-fluid
    .span12.panel
      = form_tag update_scans_admin_notification_settings_path, class: 'form form-horizontal margin0 padding1top' do |f|
        .control-group
          = label_tag 'notification[to]', 'Notifier à', class: 'control-label'
          .controls
            = text_field_tag 'notification[to]', Settings.first.notify_scans_not_delivered_to.join(', ')
            %span.help-block Séparer les valeurs par une virgule.
        .form-actions.margin0bottom
          = submit_tag t('actions.submit'), class: 'btn btn-primary'
          = link_to t('actions.cancel'), admin_notification_settings_path, class: 'btn'
