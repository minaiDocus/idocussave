#dematboxes
  = render '/admin/dematboxes/navigation'
  .row-fluid
    .span9
      %h3 Fichiers scann√©s
      %table.table.table-striped.table-bordered.table-condensed
        %thead
          %tr
            %th= t('mongoid.models.common.attributes.created_at')
            %th= t('mongoid.models.temp_document.attributes.dematbox_doc_id')
            %th= t('mongoid.models.temp_document.attributes.delivered_by')
            %th= t('mongoid.models.temp_document.attributes.content_file_name')
            %th= t('mongoid.models.temp_document.attributes.content_file_size')
            %th= t('mongoid.models.temp_document.attributes.state.name')
        %tbody
          - @dematbox_files.each do |file|
            %tr
              %td= l file.created_at
              %td= file.dematbox_doc_id
              %td= file.delivered_by
              %td= file.content_file_name
              %td= file_size file.content_file_size
              %td= t("mongoid.models.temp_document.attributes.state.values.#{file.state}")
      .pull-right
        = paginate @dematbox_files
    .span3
      = render 'sidebar'