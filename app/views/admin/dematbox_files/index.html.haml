#dematboxes
  = render '/admin/dematboxes/navigation'
  .row-fluid
    .span9
      %h3 Fichiers scann√©s
      %table.table.table-striped.table-bordered.table-condensed
        %thead
          %tr
            %th= t('mongoid.models.common.attributes.created_at')
            %th= t('mongoid.models.dematbox_file.attributes.doc_id')
            %th= t('mongoid.models.dematbox_file.attributes.user')
            %th= t('mongoid.models.dematbox_file.attributes.user_code')
            %th= t('mongoid.models.dematbox_file.attributes.journal_name')
            %th= t('mongoid.models.dematbox_file.attributes.period')
            %th= t('mongoid.models.dematbox_file.attributes.content_file_size')
            %th= t('mongoid.models.dematbox_file.attributes.is_processed')
        %tbody
          - @dematbox_files.each do |file|
            %tr
              %td= l file.created_at
              %td= file.doc_id
              %td= link_to file.user.code, [:admin, file.user]
              %td= file.user_code
              %td= file.journal_name
              %td= file.period
              %td= file_size file.content_file_size
              %td= dematbox_file_state file.is_processed
      .pull-right
        = paginate @dematbox_files
    .span3
      = render 'sidebar'