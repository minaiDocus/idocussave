.row-fluid
  .span12.well
    %h3 Filtres

    %br
    = form_tag admin_invoices_path, method: :get, class: 'form form-vertical margin0bottom' do
      = hidden_field_tag :direction, sort_direction
      = hidden_field_tag :sort, sort_column
      = hidden_field_tag :per_page, per_page
      = label_tag 'invoice_contains[number]', t('mongoid.models.invoice.attributes.number')
      = text_field_tag 'invoice_contains[number]', (params[:invoice_contains][:number] rescue ''), class: 'span12'
      = label_tag 'invoice_contains[amount_in_cents_w_vat]', t('mongoid.models.invoice.attributes.amount_in_cents_w_vat')
      = select_tag 'invoice_contains[amount_in_cents_w_vat_comparison_operator]', options_for_select([['=', 'eq'], ['>', 'gte'], ['<', 'lte']], (params[:invoice_contains][:amount_in_cents_w_vat_comparison_operator] rescue '')), class: 'span3', style: 'float:left;margin-right:6px;'
      = text_field_tag 'invoice_contains[amount_in_cents_w_vat]', (params[:invoice_contains][:amount_in_cents_w_vat] rescue ''), class: 'span9'
      = label_tag 'organization_contains[name]', t('mongoid.models.organization.name')
      = text_field_tag 'organization_contains[name]', (params[:organization_contains][:name] rescue ''), class: 'span12'
      = label_tag 'user_contains[code]', t('mongoid.models.user.name')
      = text_field_tag 'user_contains[code]', (params[:user_contains][:code] rescue ''), class: 'span12'
      = label_tag 'invoice_contains[created_at][$gte]', t('mongoid.models.common.attributes.created_at')
      .filter_date
        .input-prepend.date.datepicker
          %span.add-on
            >=
          = text_field_tag 'invoice_contains[created_at][$gte]', (params[:invoice_contains][:created_at]['$gte'] rescue '')
        .input-prepend.date.datepicker
          %span.add-on
            <=
          = text_field_tag 'invoice_contains[created_at][$lte]', (params[:invoice_contains][:created_at]['$lte'] rescue '')
      %br
      = submit_tag t('filters.action'), class: 'btn btn-primary'
      = link_to t('filters.reset'), admin_invoices_path, class: 'btn'

.row-fluid
  .span12.well
    %h3 Ordre de prélèvement
    %br
    = form_tag debit_order_admin_invoices_path, class: 'form form-vertical margin0bottom' do
      .filter_date
        .input-prepend.date.datepicker
          %span.add-on
            Date
          = text_field_tag :invoice_date
        .input-prepend.date.datepicker
          %span.add-on
            Date de prélv.
          = text_field_tag :debit_date
      = submit_tag 'Générer le fichier CSV', class: 'btn btn-primary'
