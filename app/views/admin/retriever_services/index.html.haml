#retriever_services
  .row
    .col-md-12
      .box.small-shadow.clearfix
        = render 'layouts/admin/retriever/navigation'

  .card
    .card-header.clearfix
      .float-left
        %h3 Liste des automates disponibles
      .float-right
        = link_to 'Mettre Ã  jour', admin_retriever_services_update_list_path, method: :post, class: 'btn btn-primary'
    .card-body
      .row
        .col-md-6
          .box.bg-light.height_groups.groups_1
            %h4 Documents (#{@providers.size})
            %ul
              - @providers.each do |provider|
                %li= provider.name
        .col-6
          .box.bg-light.height_groups.groups_1
            %h4 Banques (#{@banks.size})
            %ul
              - @banks.each do |bank|
                %li= bank.name
