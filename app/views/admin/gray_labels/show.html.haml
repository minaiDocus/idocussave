#gray_label
  = render partial: 'navigation'

  .row-fluid
    .span12.panel
      .pull-left
        %h2= @gray_label.name
      .pull-right
        = link_to t('actions.return'), admin_gray_labels_path, class: 'btn'
        = link_to icon_edit + ' ' + t('actions.edit'), edit_admin_gray_label_path(@gray_label), class: 'btn btn-primary'
        = link_to icon_destroy + ' ' + t('actions.destroy'), admin_gray_label_path(@gray_label), data: { confirm: t('actions.confirm') }, method: 'delete', class: 'btn btn-danger'

  .row-fluid
    .span8.panel
      %table.table.table-striped.table-condensed.margin1top
        %thead
          %tbody
            %tr
              %th= t('mongoid.models.common.attributes.created_at')
              %td= l(@gray_label.created_at)
            %tr
              %th= t('mongoid.models.gray_label.attributes.name')
              %td= @gray_label.name
            %tr
              %th= t('mongoid.models.organization.name')
              %td= @gray_label.organization.name
            %tr
              %th= t('mongoid.models.gray_label.attributes.site_url')
              %td= @gray_label.site_url
            %tr
              %th= t('mongoid.models.gray_label.attributes.logo_url')
              %td= @gray_label.logo_url
            %tr
              %th= t('mongoid.models.gray_label.attributes.back_url')
              %td= @gray_label.back_url
            %tr
              %th= t('mongoid.models.gray_label.attributes.is_active')
              %td= @gray_label.is_active ? t('yes_value') : t('no_value')
            %tr
              %th= t('mongoid.models.gray_label.attributes.link_to_session_create')
              - url = File.join(root_url, @gray_label.link_to_session_create)
              %td= link_to url, url
