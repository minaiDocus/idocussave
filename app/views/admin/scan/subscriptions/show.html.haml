.label{ class: ((@subscription && @subscription.is_update_requested?) ? 'label-warning' : ''), style: 'padding:3px 5px 3px' }
  = link_to icon_edit, '#edit_scan_subscription', 'data-toggle' => 'modal'
  Abonnement en cours
  - if @period
    = @period.duration == 1 ? '(Mensuel)' : '(Trimestriel)'

%table.table.table-striped.table-bordered.table-condensed.margin0bottom
  %tr
    %th= label_tag 'user[is_invoiceable]', t('mongoid.models.user.attributes.is_invoiceable')
    %td.value= check_box_tag 'user[is_invoiceable]', 1, @user.is_invoiceable
%table.table.table-striped.table-bordered.table-condensed
  - if @user.is_prescriber
    %tr
      %th Option
      %th Choix
      %th.price Prix HT
      %th.price Prix TTC
    - @options.each do |option|
      %tr
        %td= option.group_title
        %td= option.title
        %td.price= format_price_00(option.price_in_cents_wo_vat) + ' €'
        %td.price= format_price_00(option.price_in_cents_wo_vat * @subscription.tva_ratio) + ' €'
    %tr
      %td
      %th.total Total
      %td.total.price= format_price_00(@subscription.total) + ' €'
      %td.total.price= format_price_00(@subscription.total * @subscription.tva_ratio) + ' €'
    %tr
      %td
      %th.total VAT (#{@subscription.tva_ratio})
      %td
      %td.total.price= format_price_00((@subscription.total * @subscription.tva_ratio) - @subscription.total) + ' €'
  - elsif @period
    %tr
      %th Option
      %th Choix
      %th.price Prix HT
      %th.price Prix TTC
    - @period.product_option_orders.by_position.each do |option|
      %tr
        %td= option.group_title
        %td= option.title
        %td.price= format_price_00(option.price_in_cents_wo_vat) + ' €'
        %td.price= format_price_00(option.price_in_cents_wo_vat * @period.tva_ratio) + ' €'
    %tr
      %td Dépassement
      %td
      %td.price= format_price_00(@period.price_in_cents_of_total_excess) + ' €' rescue '0,00 €'
      %td.price= format_price_00(@period.price_in_cents_of_total_excess * @period.tva_ratio) + ' €' rescue '0,00 €'
    %tr
      %td
      %th.total Total
      %td.total.price= format_price_00(@period.total_price_in_cents_wo_vat) + ' €' rescue '0,00 €'
      %td.total.price= format_price_00(@period.total_price_in_cents_wo_vat * @period.tva_ratio) + ' €' rescue '0,00 €'
    %tr
      %td
      %th.total VAT (#{@period.tva_ratio})
      %td
      %td.total.price= format_price_00((@period.total_price_in_cents_wo_vat * @period.tva_ratio) - @period.total_price_in_cents_wo_vat) + ' €'
