= form_tag generate_admin_user_file_sending_kit_path(@user), class: 'form form-horizontal file_sending_kit margin0' do
  .modal-body
    %table.table.table-striped.table-bordered.table-condensed
      %tr
        %th Sélection
        %th Nom
        %th Début
        %th Durée
      - @file_sending_kit.user.clients.active.each do |client|
        %tr
          %td!= check_box_tag "users[#{client.id}][is_checked]", "true", false
          %td!= client.info
          %td!= number_field_tag "users[#{client.id}][start_month]", 0, style: 'width:50px;'
          %td!= number_field_tag "users[#{client.id}][offset_month]", 1, style: 'width:50px;'
  .modal-footer
    = submit_tag 'Générer', class: 'btn'

