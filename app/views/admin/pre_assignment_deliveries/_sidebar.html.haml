.card.retractable-filter
  = form_tag admin_pre_assignment_deliveries_path, method: :get, class: 'form-filter' do
    .card-header.clearfix
      .float-left
        %h3 Filtres
      .float-right.margin1left
        %a.locker{ href: "#", title: "Cacher le Filtre" }= glyphicon('layers')
    .retractable-filter-content
      .card-body
        = hidden_field_tag :software, params[:software]
        = hidden_field_tag :direction, sort_direction
        = hidden_field_tag :sort, sort_column
        = hidden_field_tag :per_page, per_page
        .form-group
          .label-section
            = label_tag 'pre_assignment_delivery_contains[id]', 'NÂ°'
          .control-section
            = number_field_tag 'pre_assignment_delivery_contains[id]', (params[:pre_assignment_delivery_contains][:id] rescue ''), class: 'span12'
        .form-group
          .label-section
            = label_tag 'pre_assignment_delivery_contains[pack_name]', t('activerecord.models.pre_assignment_delivery.attributes.pack_name')
          .control-section
            = text_field_tag 'pre_assignment_delivery_contains[pack_name]', (params[:pre_assignment_delivery_contains][:pack_name] rescue ''), class: 'span12'
        .form-group
          .label-section
            = label_tag 'pre_assignment_delivery_contains[total_item]', t('activerecord.models.pre_assignment_delivery.attributes.total_item')
          .control-section
            = number_field_tag 'pre_assignment_delivery_contains[total_item]', (params[:pre_assignment_delivery_contains][:total_item] rescue ''), class: 'span12'
        .form-group
          .label-section
            = label_tag 'pre_assignment_delivery_contains[is_auto]', t('activerecord.models.pre_assignment_delivery.attributes.is_auto')
          .control-section
            = select_tag 'pre_assignment_delivery_contains[is_auto]', options_for_select([[t('yes_value'), 1],[t('no_value'), 0]], (params[:pre_assignment_delivery_contains][:is_auto] rescue '')), include_blank: true
        .form-group
          .label-section
            = label_tag 'pre_assignment_delivery_contains[state]', t('activerecord.models.pre_assignment_delivery.attributes.state')
          .control-section
            = select_tag 'pre_assignment_delivery_contains[state]', options_for_select(PreAssignmentDelivery.state_machine.states.map { |e| [e.human_name, e.name] }, (params[:pre_assignment_delivery_contains][:state] rescue '')), include_blank: true
        .form-group
          .label-section
            = label_tag 'pre_assignment_delivery_contains[error_message]', t('activerecord.models.pre_assignment_delivery.attributes.error_message')
          .control-section
            = text_field_tag 'pre_assignment_delivery_contains[error_message]', (params[:pre_assignment_delivery_contains][:error_message] rescue ''), class: 'span12'
        .form-group
          .label-section
            = label_tag 'pre_assignment_delivery_contains[created_at][>=]', t('activerecord.models.common.attributes.created_at')
          .control-section
            .input-append.date.datepicker
              = text_field_tag 'pre_assignment_delivery_contains[created_at][>=]', (params[:pre_assignment_delivery_contains][:created_at]['>='] rescue '')
              %span.add-on
                %i.icon-th
          .control-section
            .input-append.date.datepicker
              = text_field_tag 'pre_assignment_delivery_contains[created_at][<=]', (params[:pre_assignment_delivery_contains][:created_at]['<='] rescue '')
              %span.add-on
                %i.icon-th
        .form-group
          .label-section
            = label_tag 'pre_assignment_delivery_contains[updated_at][>=]', t('activerecord.models.common.attributes.updated_at')
          .control-section
            .input-append.date.datepicker
              = text_field_tag 'pre_assignment_delivery_contains[updated_at][>=]', (params[:pre_assignment_delivery_contains][:updated_at]['>='] rescue '')
              %span.add-on
                %i.icon-th
          .control-section
            .input-append.date.datepicker
              = text_field_tag 'pre_assignment_delivery_contains[updated_at][<=]', (params[:pre_assignment_delivery_contains][:updated_at]['<='] rescue '')
              %span.add-on
                %i.icon-th
      .card-footer
        .form-actions
          = submit_tag t('filters.action'), name: nil, class: 'btn btn-primary'
          = link_to t('filters.reset'), admin_pre_assignment_deliveries_path(software: params[:software]), class: 'btn'
