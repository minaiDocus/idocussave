.modal-body
  .row-fluid
    .span12
      = link_to icon_new + 'Ajouter une colonne', '#', class: 'btn btn-small add_column'
      = link_to icon_destroy + 'Supprimer toutes les colonnes', '#', data: { confirm: 'Etes-vous sûr ?' }, class: 'btn btn-small remove_all_columns'
  %br
  .row-fluid
    .box.span12
      = simple_form_for [:admin,@user] do |f|
        %ul.list
          - @csv_outputter.to_a.each do |part|
            = render partial: 'admin/csv_outputters/column', locals: { selected: part }

  %ul.template.hide
    = render 'admin/csv_outputters/column', locals: { selected: :date }
.modal-footer
  .pull-left{ style: 'vertical-align: middle;' }
    %span.well.well-small
      %span.label.label-info %Y
      \: Année
    %span.well.well-small
      %span.label.label-info %m
      \: Mois
    %span.well.well-small
      %span.label.label-info %d
      \: Jour
    %span.well.well-small
      %span.label.label-info %%
      \: %
  = link_to 'Valider', '#', class: 'btn submit'
