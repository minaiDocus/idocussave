#scanning_providers
  .row-fluid
    .span12
      .pull-left
        %h3 Ateliers
      .pull-right
        = link_to t('actions.new'), new_admin_scanning_provider_path, class: 'btn btn-primary'
  .row-fluid
    .span12
      = render partial: 'list_options'
      .row-fluid
        .span6
          %table.table.table-bordered.table-condensed.table-striped.margin1top.margin0bottom
            %thead
              %tr
                %th= t('mongoid.models.common.attributes.created_at')
                %th= t('mongoid.models.scanning_provider.attributes.name')
                %th= t('mongoid.models.scanning_provider.attributes.customers_count')
                %th Actions
            %tbody
              - @scanning_providers.each do |scanning_provider|
                %tr
                  %td= l(scanning_provider.created_at)
                  %td= link_to scanning_provider, admin_scanning_provider_path(scanning_provider)
                  %td= scanning_provider.customers.count
                  %td
                    = icon_link_to edit_admin_scanning_provider_path(scanning_provider), { icon: 'edit' }, { class: 'btn btn-mini' }
                    = icon_link_to admin_scanning_provider_path(scanning_provider), { icon: 'remove' }, { class: 'btn btn-mini', data: { method: 'DELETE', confirm: t('actions.confirm') } }
      = render partial: 'list_options'
