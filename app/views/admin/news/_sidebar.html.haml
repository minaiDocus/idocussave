.card.retractable-filter
  = form_tag admin_news_index_path, method: :get, class: 'form-filter' do
    .card-header.clearfix
      .float-left
        %h3 Filtres
      .float-right.margin1left
        %a.locker{ href: "#", title: "Cacher le Filtre" }= glyphicon('layers')
    .retractable-filter-content
      .card-body
        = hidden_field_tag :direction, sort_direction
        = hidden_field_tag :sort, sort_column
        = hidden_field_tag :per_page, per_page
        .form-group
          .label-section
            = label_tag 'news_contains[created_at][>=]', t('activerecord.models.common.attributes.created_at')
          .control-section  
            .input-group
              .input-group-prepend
                %span.input-group-text >=
              = text_field_tag 'news_contains[created_at][>=]', (params[:news_contains][:created_at]['>='] rescue ''), class: 'form-control date datepicker'
            &nbsp;
            .input-group
              .input-group-prepend
                %span.input-group-text <=
              = text_field_tag 'news_contains[created_at][<=]', (params[:news_contains][:created_at]['<='] rescue ''), class: 'form-control date datepicker'
        .form-group
          .label-section
            = label_tag 'news_contains[updated_at][>=]', t('activerecord.models.common.attributes.updated_at')
          .control-section  
            .input-group
              .input-group-prepend
                %span.input-group-text >=
              = text_field_tag 'news_contains[updated_at][>=]', (params[:news_contains][:updated_at]['>='] rescue ''), class: 'form-control date datepicker'
            &nbsp;
            .input-group
              .input-group-prepend
                %span.input-group-text <=
              = text_field_tag 'news_contains[updated_at][<=]', (params[:news_contains][:updated_at]['<='] rescue ''), class: 'form-control date datepicker'
        .form-group
          .label-section
            = label_tag 'news_contains[title]', t('activerecord.models.news.attributes.title')
          .control-section  
            = text_field_tag 'news_contains[title]', (params[:news_contains][:title] rescue ''), class: 'form-control'
        .form-group
          .label-section
            = label_tag 'news_contains[target_audience]', t('activerecord.models.news.attributes.target_audience')
          .control-section  
            = select_tag 'news_contains[target_audience]', options_for_select(news_target_audience_options, (params[:news_contains][:target_audience] rescue '')), include_blank: true, class: 'form-control'
        .form-group
          .label-section
            = label_tag 'news_contains[published_at][>=]', t('activerecord.models.news.attributes.published_at')
          .control-section  
            .input-group
              .input-group-prepend
                %span.input-group-text >=
              = text_field_tag 'news_contains[published_at][>=]', (params[:news_contains][:published_at]['>='] rescue ''), class: 'form-control date datepicker'
            &nbsp;
            .input-group
              .input-group-prepend
                %span.input-group-text <=
              = text_field_tag 'news_contains[published_at][<=]', (params[:news_contains][:published_at]['<='] rescue ''), class: 'form-control date datepicker'
      .card-footer
        .form-actions
          = submit_tag t('filters.action'), name: nil, class: 'btn btn-primary'
          = link_to glyphicon('x'), admin_news_index_path, class: 'btn btn-light', title: t('filters.reset')
