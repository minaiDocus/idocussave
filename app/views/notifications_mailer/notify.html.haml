%html
  %head
    %title [iDocus] #{@notification.title}
    %meta{ content: 'text/html', charset: 'UTF-8', 'http-equiv' => 'Content-type' }
  %body
    Bonjour #{@notification.user.name},
    %br
    != @markdown.render @notification.message
