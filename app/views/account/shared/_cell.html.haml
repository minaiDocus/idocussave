- is_translatable ||= false
- if instance.send(key.to_s+'_changed?') && !instance.is_new?
  - if is_translatable
    = t('mongoid.models.'+instance.class.to_s.underscore+'.attributes.'+key.to_s+'_'+instance.send(key.to_s+'_was').to_s)
  - else
    = instance.send(key.to_s+'_was')
  %hr.margin0
  = icon(icon: 'pencil')
- if is_translatable
  = t('mongoid.models.'+instance.class.to_s.underscore+'.attributes.'+key.to_s+'_'+instance.send(key.to_s).to_s)
- else
  = instance.send(key)