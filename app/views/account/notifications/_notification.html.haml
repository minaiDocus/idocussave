%li.notification{ class: ('active' unless notification.is_read ) }
  .row-fluid
    .media.span12
      .media-body
        %a{ href: link_through_account_notification_path(notification) }
          %strong.notification-title= t('notifications.' + notification.notice_type + '.title')
        %p.notification-desc= t('notifications.' + notification.notice_type + '.message')
        .notification-meta
          %small.timestamp
            Il y a
            = distance_of_time_in_words Time.now, notification.created_at
