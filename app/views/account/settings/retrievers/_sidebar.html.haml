.row-fluid
  .span12
    %h3 Filtres

    %br
    = form_tag account_settings_fiduceo_retrievers_path, method: :get, html: { class: 'form form-vertical' } do
      = hidden_field_tag :direction, sort_direction
      = hidden_field_tag :sort, sort_column
      = hidden_field_tag :per_page, per_page
      = label_tag 'fiduceo_retriever_contains[name]', t('mongoid.models.fiduceo_retriever.attributes.name')
      = text_field_tag 'fiduceo_retriever_contains[name]', (params[:fiduceo_retriever_contains][:name] rescue ''), class: 'span12'
      %br
      = submit_tag t('filters.action'), class: 'btn'
      = link_to t('filters.reset'), account_settings_fiduceo_retrievers_path, class: 'btn'