#pre_assignment_delivery_errors.container-fluid
  .alerts
    = render partial: 'shared/messages'

  .row-fluid
    .span12.well
      .pull-left
        %h3 Liste des livraisons de prÃ©-affectation en erreurs (#{@errors.count})
  .row-fluid
    .span12.well
      %table.table.table-striped.table-condensed.margin0bottom
        %thead
          %tr
            %th.date Date
            %th.name Lot
            %th.count Nb.
            %th.message Erreur
        %tbody
          - @errors.each do |object|
            %tr
              %td.date
                - if object.date
                  - if object.date.today?
                    = l(object.date, format: '%H:%M')
                  - else
                    = l(object.date, format: '%d %b %Y %H:%M')
                - else
                  \-
              %td.name= object.name
              %td.count= object.document_count
              %td.message= object.message == false ? '-' : sanitize(object.message, :tags => %w(br))
