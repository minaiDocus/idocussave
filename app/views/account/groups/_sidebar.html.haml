%h3 Filtres

%br
= form_tag account_organization_groups_path(@organization), method: :get, class: 'form form-vertical margin0' do
  = hidden_field_tag :direction, sort_direction
  = hidden_field_tag :sort, sort_column
  = hidden_field_tag :per_page, per_page
  = label_tag 'group_contains[name]', t('mongoid.models.group.attributes.name')
  = text_field_tag 'group_contains[name]', (params[:group_contains][:name] rescue ''), class: 'span12'
  = label_tag 'group_contains[description]', t('mongoid.models.group.attributes.description')
  = text_field_tag 'group_contains[description]', (params[:group_contains][:description] rescue ''), class: 'span12'
  %br
  = submit_tag t('filters.action'), class: 'btn btn-primary'
  = link_to t('filters.reset'), account_organization_groups_path(@organization), class: 'btn'
