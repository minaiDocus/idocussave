.card.retractable-filter
  = form_tag account_organization_groups_path(@organization), method: :get, class: 'form-filter' do
    .card-header.clearfix
      .float-left
        %h3 Filtres
      .float-right.margin1left
        %a.locker{ href: "#", title: "Cacher le Filtre" }= glyphicon('layers')
    .retractable-filter-content
      .card-body
        = hidden_field_tag :direction, sort_direction
        = hidden_field_tag :sort, sort_column
        = hidden_field_tag :per_page, per_page
        .form-group
          .label-section
            = label_tag 'group_contains[name]', t('activerecord.models.group.attributes.name')
          .control-section
            = text_field_tag 'group_contains[name]', (params[:group_contains][:name] rescue '')
        .form-group
          .label-section
            = label_tag 'group_contains[description]', t('activerecord.models.group.attributes.description')
          .control-section
            = text_field_tag 'group_contains[description]', (params[:group_contains][:description] rescue '')
      .card-footer
        .form-actions
          = submit_tag t('filters.action'), class: 'btn btn-primary'
          = link_to glyphicon('x'), account_organization_groups_path(@organization), class: 'btn btn-light'