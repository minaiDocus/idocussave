#group
  .row-fluid
    .span12.box
      .row-fluid
        .span12
          .pull-left
            %h3 #{@group}
          .pull-right
            - if (is_leader? || @user.can_manage_groups?) && @organization.is_active
              = link_to icon_edit + ' ' + t('actions.edit'), edit_account_organization_group_path(@organization, @group), class: 'btn btn-primary'

  .row-fluid
    .span4.box
      %h4.margin1bottom Informations
      %table.table.table-condensed.table-bordered.table-striped.margin0bottom
        %tbody
          %tr
            %th= t('mongoid.models.common.attributes.created_at')
            %td= l @group.created_at
          %tr
            %th= t('mongoid.models.group.attributes.name')
            %td= @group.name
          %tr
            %th= t('mongoid.models.group.attributes.description')
            %td= @group.description
    .span4.box
      %h4.margin1bottom Liste des collaborateurs (#{@group.collaborators.count})
      %ul
        - @group.collaborators.asc(:code).each do |collaborator|
          %li= collaborator.info
    .span4.box
      %h4.margin1bottom Liste des clients (#{@group.customers.count})
      %ul
        - @group.customers.asc(:code).each do |customer|
          %li= customer.info
