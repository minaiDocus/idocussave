.edit
  .row-fluid
    .span12.box
      %h3 Edition des options des périodes
  .row-fluid
    .span12.box
      = simple_form_for @organization, url: account_organization_period_options_path(@organization), html: { class: 'form form-horizontal margin0bottom' } do |f|
        = f.input :authd_prev_period,          as: :integer, input_html: { min: 0 }
        = f.input :auth_prev_period_until_day, as: :integer, input_html: { min: 0, max: 28 }, hint: '0 à 28'
        - if @user.is_admin
          = f.input :auth_prev_period_until_month, as: :integer, input_html: { min: 0, max: 2 }, hint: '0 = actuel, 1 = le mois suivant, 2 = dans 2 mois'
        .form-actions.margin0bottom
          = f.submit t('actions.submit'), class: 'btn btn-primary'
          = link_to t('actions.cancel'), account_organization_path(@organization, tab: 'period_options'), class: 'btn'
