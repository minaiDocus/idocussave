- part ||= [':date','']
- field = part[0]
- format = part[1]
%li.field.float-left
  .input-prepend.input-append.clearfix
    %span.action.float-left
      = link_to glyphicon('move', { size: '16px' }), '#'
    = select_tag :directive, options_for_select(csv_descriptor_directive_options,field), id: 'select_directive', class: 'float-left'
    = text_field_tag :format, format, id: 'text_format', class: 'float-left'
    .number-input.float-left
      %button.step-down.minus#step-button{type: 'button'}
      = number_field_tag :format, format, id: 'number-input', class: 'tooltips number-input-field', min: '0', step: '1',  title: 'Nombre de caratères max. (Vide ou 0 = sans limite)', data: { toggle: 'tooltip', placement: 'right' }
      %button.step-up.plus#step-button{type: 'button'}
    = select_tag :format, options_for_select(csv_descriptor_format_options,format), id: 'select_format', class: 'float-left'
    %span.action.float-left
      = link_to glyphicon('x', { size: '12px' }), '#', id: '', class: 'remove_field'
    %span.separator ;
    %label.switch
      %input#field-separator-state{:type => "checkbox", checked: true, value: '|separator', class: ' remove-field-separator'}
      .slider.round
        %span.on{ title: 'Désactiver le « Séparateur » point-virgule (;)', data: { toggle: 'tooltip', placement: 'right' }} Oui
        %span.off{style: 'text-decoration: line-throug', title: 'Activer le « Séparateur » point-virgule (;)', data: { toggle: 'tooltip', placement: 'right' }} Non
