#use_csv_descriptor.edit
  - if @customer.configured?
    .row-fluid
      .span12.box
        %h3 Edition des options de comptabilité du client : #{link_to @customer, account_organization_customer_path(@organization, @customer, tab: 'compta')}
  - else
    = render 'account/customers/steps'
    .row-fluid
      .span12.box
        %h3 Format d’export .csv
  .row-fluid
    .span12.box
      = simple_form_for @customer, url: account_organization_customer_use_csv_descriptor_path(@organization, @customer), html: { class: 'form form-horizontal margin0' } do |f|
        = f.simple_fields_for :options do |o|
          = o.input :is_own_csv_descriptor_used, as: :radio_buttons
        .form-actions.margin0bottom
          = link_to t('actions.previous_step'), previous_step_account_organization_customer_path(@organization, @customer), class: 'btn'
          = f.submit t('actions.next_step'), class: 'btn btn-primary'
