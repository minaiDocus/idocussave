= simple_form_for [:account, @address], html: { class: 'form form-horizontal margin0' } do |f|
  = f.input :company
  = f.input :first_name, required: true
  = f.input :last_name,  required: true
  = f.input :address_1,  required: true
  = f.input :address_2
  = f.input :city
  = f.input :zip
  = f.input :is_for_billing,  as: :boolean
  = f.input :is_for_shipping, as: :boolean
  .form-actions.margin0bottom
    = f.submit t('actions.submit'), class: 'btn btn-primary'
    - link_name = action_name == 'new' ? t('actions.return').capitalize : t('actions.cancel').capitalize
    = link_to link_name, account_addresses_path, class: 'btn'
