= render partial: 'account/retrievers/list_options'
%table.table.table-bordered.table-condensed.table-striped.margin1top.margin0bottom
  %thead
    %tr
      %th= sortable :type,         t('mongoid.models.retriever.attributes.type')
      %th= sortable :service_name, t('mongoid.models.retriever.attributes.service_name')
      %th= sortable :name,         t('mongoid.models.retriever.attributes.name')
      %th Journal
      %th.retriever_state= t('mongoid.models.retriever.attributes.state')
      %th Actions
  %tbody
    - @retrievers.each do |retriever|
      - present retriever do |retriever_presenter|
        %tr
          %td= t("mongoid.models.retriever.attributes.type_values.#{retriever_presenter.type}")
          %td= retriever_presenter.service_name
          %td= retriever_presenter.name
          %td= retriever_presenter.journal.try(:name) || '-'
          %td.retriever_state!= retriever_presenter.state(scope)
          %td
            - if @customer.present?
              - if retriever.ready? || retriever.error?
                - if retriever.api_id.present?
                  = retriever_presenter.action_link(@organization, @customer)
                = link_to icon_edit, edit_account_organization_customer_retriever_path(@organization, @customer, retriever), title: 'Editer', rel: 'tooltip'
              - if retriever.ready? || retriever.error? || retriever.unavailable?
                = link_to icon_destroy, account_organization_customer_retriever_path(@organization, @customer, retriever), data: { method: :delete, confirm: t('actions.confirm') }, title: 'Supprimer', rel: 'tooltip'
            - else
              = icon_link_to '#', { icon: 'info-sign' }, { rel: 'popover', data: { 'original-title' => 'Date de crÃ©ation/modification', content: "#{l(retriever.created_at)}<br>#{l(retriever.updated_at)}", placement: 'left' } }
              - if retriever.ready? || retriever.error?
                - if retriever.api_id.present?
                  = retriever_presenter.action_link
                = link_to icon_edit, edit_account_retriever_path(retriever), title: 'Editer', rel: 'tooltip'
              - if retriever.ready? || retriever.error? || retriever.unavailable?
                = link_to icon_destroy, account_retriever_path(retriever), data: { method: :delete, confirm: t('actions.confirm') }, title: 'Supprimer', rel: 'tooltip'
= render partial: 'account/retrievers/list_options'
