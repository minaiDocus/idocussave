#providers{ data: { providers: @providers.to_json, selected_providers: @providers.select { |e| e['id'] == @retriever.provider_id && e[:name] == @retriever.service_name }.to_json } }
#banks{ data: { banks: @banks.to_json, selected_banks: @banks.select { |e| e['id'] == @retriever.bank_id && e[:name] == @retriever.service_name }.to_json } }
- if @retriever.dyn_attr_type == 'list'
  #selected{ data: { dyn_attr_value: @retriever.dyn_attr } }

= simple_form_for [:account, @retriever], html: { class: 'retriever_form form form-horizontal' } do |f|
  = f.input :type, collection: [['Documents (Factures)', 'provider'], ['Op√©rations bancaires', 'bank']], include_blank: false, disabled: @retriever.persisted?
  = f.input :service_name, as: :hidden
  = f.input :provider_id, required: true, disabled: @retriever.persisted?
  = f.input :bank_id, required: true, disabled: @retriever.persisted?, wrapper_html: { style: 'display:none' }
  = f.input :name
  - unless @retriever.persisted? && @retriever.bank?
    = f.input :journal_id, collection: @user.account_book_types.asc(:name), include_blank: false, required: true
  = f.input :login
  = f.input :password, required: true, as: :password
  = f.input :dyn_attr, wrapper_html: { class: 'dyn_attr', style: 'display:none' }
  = f.input :dyn_list_attr, collection: [], include_blank: false, wrapper_html: { class: 'dyn_list_attr', style: 'display:none' }
  = f.input :dyn_pass_attr, type: :password, as: :password, wrapper_html: { class: 'dyn_pass_attr', style: 'display:none' }
  .form-actions
    = f.submit t('actions.submit'), class: 'btn btn-primary'
    = link_to t('actions.cancel'), account_retrievers_path, class: 'btn'
