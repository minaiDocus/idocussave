#customer.edit.knowings.derivationRight
  - unless @customer.configured?
    .box
      = render 'steps'
  .card
    .card-header
      - if @customer.configured?
        %h3
          Edition des options Knowings du client :
          = link_to @customer, account_organization_customer_path(@organization, @customer, tab: 'ged'), class: 'fs-origin'
      - else
        %h3
          Configuration de la GED pour le dossier :
          %span.text-info.fs-origin= @customer

    = simple_form_for @customer, url: update_knowings_options_account_organization_customer_path(@organization, @customer), html: { class: 'form-horizontal' } do |f|
      .card-body
        = f.input :knowings_code
        = f.input :knowings_visibility, collection: knowings_visibility_options, include_blank: false
      .card-footer  
        .form-actions
          - if @customer.configured?
            = f.submit t('actions.submit'), class: 'btn btn-primary'
            = link_to t('actions.cancel'), account_organization_customer_path(@organization, @customer, tab: 'ged'), class: 'btn btn-light'
          - else
            = f.submit t('actions.finish'), class: 'btn btn-primary'
