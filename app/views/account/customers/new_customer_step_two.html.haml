- if @params_fec.present?
  .modal.fade.import_dialog{ :id=>"for_step_two" }
    .modal-dialog
      .modal-content
        .modal-header.clearfix
          %h3{style: "display: inline-block; float: left"}
            Paramétrage import FEC
        = render :partial => "/account/accounting_plans/dialog_box"

.card
  .card-header
    %h3 Création du dossier : Etape 2 - Paramètrage comptable

  .card-body
    %input#organization_id{ type: :hidden, value: "#{@organization.id}"}
    %input#customer_id{ type: :hidden, value: "#{@customer.id}"}
      #book_type
        = render partial: '/account/customers/book_type'
    %br
    - if !@customer.uses_ibiza?
      - if @cusomer.options.is_taxable
        #vat_account
          = render partial: 'vat_account'
      %br
      #accounting_plan
        = render partial: '/account/customers/accounting_plan'
      
  .card-footer.text-center
    = link_to "Terminer", account_organization_customer_path(@organization, @customer), class: 'btn btn-success small-shadow text-bold'

.modal.fade{ :id=>"for_step_two" }
  .modal-dialog
    .modal-content
      .modal-header.clearfix
        %h3{style: "display: inline-block; float: left"}
          Ajouter
        %button.close{ data: { dismiss: "modal", aria: { label: "close" }}}
          %span{ aria: { hidden: "true" } } &times;
      .modal-body
      .modal-footer
        #informations.mrc-5
        %button.small-shadow.text-bold#valider{ :class=>"btn btn-primary" } Valider