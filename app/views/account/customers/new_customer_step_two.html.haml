  .card-body
    %input#organization_id{ type: :hidden, value: "#{@organization.id}"}
    %input#customer_id{ type: :hidden, value: "#{@customer.id}"}
      #book_type
        = render partial: '/account/customers/book_type'
    %br
    - if !@customer.uses_api_softwares?
      - if @customer.options.is_taxable
        #vat_account
          = render partial: '/account/customers/vat_account'
      %br
      #accounting_plan
        = render partial: '/account/customers/accounting_plan'
      
  .card-footer.text-center
    = link_to "Terminer", account_organization_customer_path(@organization, @customer), class: 'btn btn-success small-shadow text-bold'

