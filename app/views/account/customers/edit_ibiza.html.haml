#customer.edit.ibiza
  - if @customer.configured?
    .row-fluid
      .span12.box
        %h3 Edition des options iBiza du client : #{link_to @customer, account_organization_customer_path(@organization, @customer, tab: 'compta')}
  - else
    = render 'account/customers/steps'
    .row-fluid
      .span12.box
        %h3 Configuration d'iBiza pour le dossier : #{@customer}

  .rwo-fluid
    .span12.box
      = simple_form_for @customer, url: update_ibiza_account_organization_customer_path(@organization, @customer), html: { class: 'form form-horizontal margin0' } do |f|
        = f.input :ibiza_id, label: 'SÃ©lectionner le dossier correspondant dans iBiza', collection: [], input_html: { style: 'display:none', data: { original_value: @customer.ibiza_id, users_list_url: account_organization_ibiza_users_path(@organization, format: 'json'), placeholder: 'Choisir un dossier' } }
        = f.simple_fields_for :options do |o|
          = o.hidden_field :id
          = o.input :is_auto_deliver, collection: auto_deliver_options, include_blank: false
          = o.input :is_compta_analysis_activated, collection: activate_compta_analytic_options, include_blank: false
        .form-actions.margin0bottom
          - if @customer.configured?
            = f.submit t('actions.submit'), class: 'btn btn-primary', disabled: true
            = link_to t('actions.cancel'), account_organization_customer_path(@organization, @customer, tab: 'compta'), class: 'btn'
          - else
            = link_to t('actions.previous_step'), previous_account_organization_customer_setup_path(@organization, @customer), class: 'btn'
            = link_to t('actions.complete_later'), complete_later_account_organization_customer_setup_path(@organization, @customer), class: 'btn'
            = f.submit t('actions.next_step'), class: 'btn btn-primary', disabled: true
