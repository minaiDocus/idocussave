#customer.edit
  - if @customer.configured?
    .row-fluid
      .span12.box
        %h3 Edition des options iBiza du client : #{link_to @customer, account_organization_customer_path(@organization, @customer, tab: 'compta')}
  - else
    = render 'account/customers/steps'
    .row-fluid
      .span12.box
        %h3 iBiza

  .rwo-fluid
    .span12.box
      = simple_form_for @customer, url: update_ibiza_account_organization_customer_path(@organization, @customer), html: { class: 'form form-horizontal margin0' } do |f|
        - users = @organization.ibiza.users
        - if users.is_a?(Array)
          - hint = link_to('Rafraîchir la liste', refresh_users_cache_account_organization_ibiza_path(@organization, back: account_organization_customer_path(@organization, @customer)))
        - elsif users.nil?
          - users = []
          - hint = 'Mise à jour de la liste en cours, veuillez rafraîchir la page dans quelques secondes'
        - else
          - users = []
          - hint = 'Erreur'
        = f.input :ibiza_id, label: 'Sélectionner le dossier correspondant dans iBiza', collection: users, input_html: { class: 'margin0bottom' }, hint: hint
        = f.simple_fields_for :options do |o|
          = o.input :is_auto_deliver, collection: auto_deliver_options, include_blank: false
        .form-actions.margin0bottom
          - if @customer.configured?
            = f.submit t('actions.submit'), class: 'btn btn-primary'
            = link_to t('actions.cancel'), account_organization_customer_path(@organization, @customer, tab: 'compta'), class: 'btn'
          - else
            = link_to t('actions.previous_step'), previous_step_account_organization_customer_path(@organization, @customer), class: 'btn'
            = f.submit t('actions.next_step'), class: 'btn btn-primary'
