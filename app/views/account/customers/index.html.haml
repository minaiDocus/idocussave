#customers
  .row-fluid
    .span12.box
      .row-fluid
        .span12
          .pull-left
            %h3 Liste des clients (#{@customers.count})
          .pull-right
            - if (is_leader? || @user.can_manage_customers?) && @organization.is_active
              = link_to icon_new + ' ' + t('actions.new'), info_account_organization_customers_path(@organization), class: 'btn btn-primary'
  .row-fluid
    .span9.box
      = render partial: 'list_options'
      .row-fluid
        .span12
          %table.table.table-bordered.table-condensed.table-striped.margin1top.margin0bottom
            %thead
              %tr
                %th
                %th.date= sortable :created_at, t('mongoid.models.common.attributes.created_at')
                %th= sortable :code, t('mongoid.models.user.attributes.formatted_identifier')
            %tbody
              - @customers.each do |customer|
                %tr
                  %td.active_state= icon(icon: 'remove') if customer.inactive? && @organization.is_active
                  %td.date= customer.created_at.strftime('%d/%m/%Y %H:%M')
                  %td.user_info
                    %span.info
                      = link_to customer, account_organization_customer_path(@organization, customer)
                    - unless params[:with_details] == "false"
                      %ul.subscription_info
                        - period = @periods.select { |e| e.user == customer }.first
                        - if period
                          - period.product_option_orders.each do |option|
                            %li
                              = option.group_title
                              - if option.title.present?
                                \:
                                = option.title
      = render partial: 'list_options'
    .span3.box
      = render partial: 'sidebar'
