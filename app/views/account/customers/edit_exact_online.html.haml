#customer.edit.exact_online
  - if @customer.configured?
    .row-fluid
      .span12.box
        %h3 Edition des options Exact Online du client : #{link_to @customer, account_organization_customer_path(@organization, @customer, tab: 'exact_online')}
  - else
    = render 'account/customers/steps'
    .row-fluid
      .span12.box
        %h3 Configuration Exact Online pour le dossier : #{@customer}

  .rwo-fluid
    .span12.box
      = simple_form_for @customer, url: update_exact_online_account_organization_customer_path(@organization, @customer), html: { class: 'form form-horizontal margin0' } do |f|
        = f.input :exact_online_id, label: 'SÃ©lectionner le dossier correspondant dans Exact Online', collection: [], input_html: { style: 'display:none', data: { original_value: @customer.exact_online_id, users_list_url: account_organization_exact_online_users_path(@organization, format: 'json'), placeholder: 'Choisir un dossier' } }
        = f.simple_fields_for :softwares do |o|
          = o.hidden_field :id
          = o.input :is_exact_online_auto_deliver, collection: auto_deliver_options, include_blank: false
        .form-actions.margin0bottom
          - if @customer.configured?
            = f.submit t('actions.submit'), class: 'btn btn-primary', disabled: true
            = link_to t('actions.cancel'), account_organization_customer_path(@organization, @customer, tab: 'exact_online'), class: 'btn'
          - else
            = link_to t('actions.previous_step'), previous_account_organization_customer_setup_path(@organization, @customer), class: 'btn'
            = link_to t('actions.complete_later'), complete_later_account_organization_customer_setup_path(@organization, @customer), class: 'btn'
            = f.submit t('actions.next_step'), class: 'btn btn-primary', disabled: true
