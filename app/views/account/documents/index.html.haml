.container-fluid{ class: (@user.active? ? 'padding12bottom' : '') }
  .alerts
    = render partial: 'shared/messages'

  .row-fluid
    .span12
      .actionbar.well.padding1top.margin1bottom
        .feedback.inactive.pull-left
          %span.out
            Aucun traitement
        = label_tag :filter, "Filtre :", :class => "pull-left"
        = text_field_tag :filter, "", :id => :filter, :class => "filter pull-left"

        = label_tag :document_owner_list, "Afficher les documents :", :class => "pull-left margin1left"
        = select_tag :document_owner_list, options_for_select([["en cours d'envois","current_delivery"],["tous","all"]]+linked_users_option(@user),["tous","all"]), :class => "view_for pull-left wauto margin05left margin0bottom"

        = label_tag :per_page, "par :", :class => "pull-left margin1left"
        = select_tag :per_page, options_for_select([["20",20],["50",50],["100",100]]), :class => "per_page pull-left w50 margin1left"

        - if @user.active?
          .pull-right
            - # %a{ :href => "#", :class => "toggle-qtip" } Afficher/Cacher l'aide
            - # |
            - if (@user.is_prescriber && file_upload_users_list.present?) || @user.options.try(:is_upload_authorized)
              %a{ data: { toggle: :modal }, href: '#uploadDialog', class: 'btn btn-primary', style: 'position:relative;top:-3px;' }
                %span.icon.icon-plus
                Ajouter des documents
  .row-fluid
    .span3
      #documentslist.well.qtip-target
        .header
          %h3.pull-left
            #{@response.count} document(s)
          - if @user.active?
            .actiongroup.pull-right
              - if current_user.is_admin
                %a.do-tooltip.delivery{ "data-toggle"=>"modal", :href => "#shareDialog", :title => "Envoyer vers mon stockage externe" }
                  %i.icon-share-alt
              %a.do-tooltip{ "data-toggle"=>"modal", :href => "#documentsTaggingDialog", :title => "Tagger" }
                %i.icon-tag
              |
              %a.do-selectAll.do-tooltip{:href => "#", :title => "Tous"}
                %i.icon-ok
              %a.do-unselectAll.do-tooltip{:href => "#", :title => "Aucun"}
                %i.icon-ban-circle
        .content
          %ul.margin3top.margin0left
            = render :partial => "/account/documents/pack", :collection => @packs
          .aligncenter
            = paginate @response

    .span9
      #pageslist.well
        #panel1
          .header.span12.margin0left
            %h3.pull-left
              Pages
            - if @user.active?
              .actiongroup.pull-right
                %a.do-tooltip{ "data-toggle"=>"modal", :href => "#pagesTaggingDialog", :title => "Tagger" }
                  %i.icon-tag
                |
                %a.do-selectAllPages.do-tooltip{:href => "#", :title => "Tous"}
                  %i.icon-ok
                %a.do-unselectAllPages.do-tooltip{:href => "#", :title => "Aucun"}
                  %i.icon-ban-circle
          .content.pages
        #panel2{ :style => "display: none" }
          .header.row-fluid
            %h3.span4.alignleft
              Page
            .actiongroup.span4.aligncenter{ style: 'margin-top:4px' }
              %a.do-prevPage{:href => "#"}
                page précédente
              \-
              %span.page_number
              \-
              %a.do-nextPage{:href => "#"}
                page suivante
            .actiongroup.span4.alignright{ style: 'margin-top:4px' }
              %a#pageInformation.do-popover-left{"data-content" => "", :href => "#", :style => "margin-right:5px;"}
                %span.label.label-info
                  tags
              - if @user.active?
                |
                %a.do-selectSinglePage.do-tooltip{:href => "#", :title => "Sélectionner"}
                  %i.icon-ok
                %a.do-unselectSinglePage.do-tooltip{:href => "#", :title => "Désélectionner"}
                  %i.icon-ban-circle
              |
              %a{:href => "#", :class=>"backToPanel1"}
                Vue par vignette
          .content
            %iframe{ :src => "", :class => "showPage", :style => "width:100%; min-height:400px;"}
        #panel3{ :style => "display: none" }
          .header.row-fluid
            %h3.span4.alignleft
              Piece
            .actiongroup.span4.aligncenter{ style: 'margin-top:4px' }
              %a.do-prevPage{:href => "#"}
                piece précédente
              \-
              %span.page_number
              \-
              %a.do-nextPage{:href => "#"}
                piece suivante
            .actiongroup.span4.alignright{ style: 'margin-top:4px' }
              %a{:href => "#", :class=>"backToPanel1"}
                Vue par vignette
          .content
            %iframe{ :src => "", :class => "showPage", :style => "width:100%; min-height:400px;"}

  - if @user.active?
    .selection-fixed-bottom
      .row-fluid
        .span12
          #selectionlist.well
            .header
              %h3.pull-left
                Sélections
              .actiongroup.pull-right
                %a.do-tooltip{ "data-toggle"=>"modal", :href => "#selectionTaggingDialog", :title => "Tagger" }
                  %i.icon-tag
                %a.do-tooltip.removeAllSelection{ :href => "#", :title => "Tout retirer" }
                  %i.icon-remove
                |
                %a{ "data-toggle"=>"modal", :href => "#compositionDialog" }
                  Composer
            .content.pages.margin3top
              %ul
                - @is_composition = true
                != render :partial => "/account/documents/document", :collection => @composition
- if @pack
  #pack{ data: { name: @pack.name.sub(' all', ''), id: @pack.id } }

- if @user.active?
  = render :partial => "/account/documents/dialog_box"
= render "help"
