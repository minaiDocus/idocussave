.container-fluid
  = render partial: 'navigation'
  .row-fluid
    .span4
      %h3 Edition du journal #{@journal.name}
      %hr
      = simple_form_for [:account, @journal], url: update_requested_users_account_account_book_type_path(@journal), method: :post, html: { class: 'form form-horizontal account_book_type margin0' } do |f|
        .control-group
          %label.control-label Clients
          .controls
            = f.collection_check_boxes :requested_client_ids, @user.clients.active.asc(:code), :id, :info, {}, { class: 'pull-left', style: 'margin-right:5px;position:relative;top:-2px;' }
        .form-actions
          = f.submit t('actions.submit'), class: 'btn'
          = link_to t('actions.cancel'), account_account_book_types_path, class: 'btn'