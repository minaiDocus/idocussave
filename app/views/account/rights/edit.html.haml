#collaborator_rights
  .row-fluid
    .span12.box
      %h3 Edition des autorisations du collaborateur : #{ link_to @collaborator.info, account_organization_collaborator_path(@organization, @collaborator, tab: 'authorization') }
  .row-fluid
    .span12.box
      = simple_form_for @collaborator, url: account_organization_collaborator_rights_url(@organization, @collaborator), html: { class: 'form form-horizontal margin0' } do |f|
        = f.simple_fields_for :organization_rights do |rf|
          = rf.input :is_collaborators_management_authorized,     as: :boolean
          = rf.input :is_customers_management_authorized,         as: :boolean
          = rf.input :is_groups_management_authorized,            as: :boolean
          = rf.input :is_journals_management_authorized,          as: :boolean
          = rf.input :is_customer_journals_management_authorized, as: :boolean
        .form-actions.margin0bottom
          = f.submit t('actions.submit'), class: 'btn btn-primary'
          = link_to t('actions.cancel'), account_organization_collaborator_path(@organization, @collaborator, tab: 'authorization'), class: 'btn'
