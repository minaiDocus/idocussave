#collaborator_rights
  .row-fluid
    .span12.box
      %h3 Edition des autorisations du collaborateur : #{ link_to @collaborator.info, account_organization_collaborator_path(@collaborator) }
  .row-fluid
    .span12.box
      = simple_form_for @collaborator, url: account_organization_collaborator_rights_url(@collaborator), html: { class: 'form form-horizontal' } do |f|
        = f.simple_fields_for :organization_rights do |rf|
          = rf.input :is_customers_management_authorized, as: :boolean, label: t('mongoid.models.organization_rights.names.customers_management')
          = rf.input :is_groups_management_authorized, as: :boolean, label: t('mongoid.models.organization_rights.names.groups_management')
          = rf.input :is_journals_management_authorized, as: :boolean, label: t('mongoid.models.organization_rights.names.journals_management')
        .form-actions
          = f.submit t('actions.submit'), class: 'btn'
          = link_to t('actions.cancel'), account_organization_collaborator_path(@collaborator.id), class: 'btn'
