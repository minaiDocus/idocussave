.card.retractable-filter
  = form_tag account_organization_guest_collaborators_path(@organization), method: :get, class: 'form-filter' do
    .card-header.clearfix
      .float-left
        %h3 Filtres
      .float-right.margin1left
        %a.locker{ href: "#", title: "Cacher le Filtre" }= glyphicon('layers')
    .retractable-filter-content
      .card-body
        = hidden_field_tag :direction, sort_direction
        = hidden_field_tag :sort, sort_column
        = hidden_field_tag :per_page, per_page
        .form-group
          .label-section
            = label_tag 'guest_collaborator_contains[email]', 'Email'
          .control-section
            = text_field_tag 'guest_collaborator_contains[email]', (params[:guest_collaborator_contains][:email] rescue '')
        .form-group
          .label-section
            = label_tag 'guest_collaborator_contains[company]', 'Société'
          .control-section
            = text_field_tag 'guest_collaborator_contains[company]', (params[:guest_collaborator_contains][:company] rescue '')
        .form-group
          .label-section
            = label_tag 'guest_collaborator_contains[first_name]', 'Prénom'
          .control-section
            = text_field_tag 'guest_collaborator_contains[first_name]', (params[:guest_collaborator_contains][:first_name] rescue '')
        .form-group
          .label-section
            = label_tag 'guest_collaborator_contains[last_name]', 'Nom'
          .control-section
            = text_field_tag 'guest_collaborator_contains[last_name]', (params[:guest_collaborator_contains][:last_name] rescue '')
      .card-footer
        .form-actions
          = submit_tag t('filters.action'), class: 'btn btn-primary'
          = link_to glyphicon('x'), account_organization_guest_collaborators_path(@organization), class: 'btn btn-light'
