#bank_accounts
  - unless @customer.configured?
    = render 'account/customers/steps'

  .row-fluid
    .span12.box
      %h3 Edition d'un compte bancaire du client : #{link_to @customer, account_organization_customer_path(@organization, @customer, tab: 'bank_accounts')}
  .row-fluid
    .span12.box
      = simple_form_for @bank_account, url: account_organization_customer_bank_account_path(@organization, @customer, @bank_account), html: { class: 'form form-horizontal margin0' } do |f|
        = f.input :number,            disabled: true
        = f.input :journal, required: true
        - if @organization.ibiza.try(:used?)
          - if @organization.ibiza.configured?
            = f.input :foreign_journal, collection: journals_for_select(@bank_account.foreign_journal, 'bank'), hint: 'si différent de "Code journal" ci-dessus'
          - else
            .control-group
              %label.control-label= t('simple_form.labels.bank_account.journal')
              .controls
                %select.select.disabled{ disabled: 'disabled' }
                %p
                  = render 'shared/ibiza_not_configured_warning'
        - else
          = f.input :journal,         required: true
        = f.input :accounting_number, required: true
        = f.input :temporary_account, required: true, hint: 'si tiers non identifiable'
        .control-group{ class: ('error' if @bank_account.errors.keys.include?(:start_date)) }
          = label_tag 'bank_account[start_date]', content_tag(:abbr, '*', title: 'champ requis') + " Choisir la date de récupération de l'historique bancaire", class: 'control-label'
          .controls
            .input-prepend.date.datepicker
              %span.add-on
                %i.icon-th
              = text_field_tag 'bank_account[start_date]', @bank_account.start_date, { style: 'width: 180px; left: -3px;' }
            - if @bank_account.operations.count >= 1
              %p.help-block L'opération bancaire la plus ancienne remontée par l'automate date du #{@bank_account.operations.order(date: :asc).first.date.strftime("%d/%m/%Y")}
        .form-actions.margin0bottom
          = f.submit t('actions.submit'), class: 'btn btn-primary'
          = link_to t('actions.cancel'), account_organization_customer_path(@organization, @customer, tab: 'bank_accounts'), class: 'btn'
