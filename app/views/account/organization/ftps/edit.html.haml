.row-fluid
  .span12.box
    %h3 Edition de la configuration FTP

.row-fluid
  .span12.box
    = simple_form_for @ftp, url: account_organization_ftps_path(@organization), html: { class: 'form form-horizontal margin0' } do |f|
      = f.input :host
      = f.input :port, as: :integer
      = f.input :is_passive
      = f.input :login
      = f.input :password
      .form-actions.margin0bottom
        = f.submit t('actions.submit'), class: 'btn btn-primary'
        = link_to t('actions.cancel').capitalize, account_organization_path(@organization, tab: 'ftp'), class: 'btn'
