!!!
%html
  %head
    %title
      Connexion
    %meta{ content: 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type' }
    %link{ rel: 'shortcut icon', type: 'image/ico', href: asset_path('favicon.ico') }
    = stylesheet_link_tag 'application'

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a{ class: 'btn btn-navbar', data: { toggle: 'collapse', target: '.nav-collapse' } }
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.logo{ href: root_path }
            %img{ src: logo_url, alt: 'logo' }
    .container
      .row
        .span3
          .well.sidebar-nav
            %ul.nav.nav-list
              %li{ class: controller_name == 'sessions' ? 'active': '' }
                = link_to 'Connexion à mon compte', new_user_session_path

              %li{ class: controller_name == 'passwords' ? 'active': '' }
                = link_to 'Réinitialiser mon mot de passe', new_user_password_path

              %li{ class: controller_name == 'unlocks' ? 'active': '' }
                = link_to 'Déverrouiller mon compte', new_user_unlock_path
        .span9
          .well
            != yield

    %footer
      .modal-footer.aligncenter
        %p{ class: 'copyright' } &copy; iDocus 2015

    = javascript_include_tag 'application'
    = render '/shared/google_analytics'
