%nav.navbar.navbar-expand-md.navbar-static-top.medium-shadow
  = link_to image_tag('logo/tiny_logo.png', alt: 'logo'), root_path, class: 'logo navbar-brand'
  - if current_user
    = render partial: 'layouts/navigation'
    - if current_user.try(:is_admin) && controller_name != 'organizations'
      %ul.as_user_view.ml-auto
        %li
          %a#as_user_view
            = glyphicon('people', { color: '#fff' })
    = render partial: 'layouts/notifications'
    = render partial: 'layouts/user'
#next-nav-wrapper

- if current_user.try(:is_admin) && controller_name != 'organizations'
  #as_user_view_box.container-fluid{ class: (session[:user_code].present? ? '' : 'hide')}
    = render 'shared/as_user'