!!!
%html
  %head
    %title Idocus | Archivage numérique
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "Content-type" }/
    %meta{ :name => :description, :content => "#{@homepage.meta_description rescue ''}" }/
    %link{ :rel => 'shortcut icon', :type => "image/ico", :href => asset_path('favicon.ico') }
    = csrf_meta_tag
    != stylesheet_link_tag 'application'

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a{ :class=>"btn btn-navbar", "data-toggle"=>"collapse", "data-target"=>".nav-collapse" }
            %span{ :class=>"icon-bar" }
            %span{ :class=>"icon-bar" }
            %span{ :class=>"icon-bar" }
          %a{ :class=>"logo", :href=>SITE_DEFAULT_URL }
            != image_tag "logo/tiny_logo.png", :alt => "logo"
          .nav-collapse
            %ul{ :class=>"nav" }
              %li{ :class=>("active" if params[:controller] == "account/profiles") }
                != link_to "Mon compte", account_profile_path
              - if current_user.is_prescriber || current_user.is_admin
                %li{ :class=>("active" if params[:controller].in?(%w(account/customers account/addresses account/journals account/subscriptions))) }
                  != link_to "Mes clients", account_users_path
              %li{ :class=>("active" if params[:controller] == "account/documents" && params[:action] == "index") }
                != link_to "Documents", account_documents_path
              /
                %li
                  != link_to "Passer une nouvelle commande »", new_tunnel_order_path
          - if current_user
            %p{ :class=>"navbar-text pull-right" }
              Bienvenue
              != link_to current_user.email, account_documents_path
              |
              != link_to "déconnexion", destroy_user_session_path
          - else
            %p{ :class=>"navbar-text pull-right" }
              %a{ "data-toggle"=>"modal", :href=>"#connexion" } Connexion
              %span{ :class=>"divider-vertical" }
              %a{ :href=>"users/sign_up" } Créer un compte
            .modal{:id=>"connexion"}
              .modal-header
                %a{ :class=>"close", "data-dismiss"=>"modal" } ×
                %h3 Connexion
              - form_for User.new, :as => :user, :url => session_path(:user), :html => {:method => :post} do |f|
                .modal-body
                  %fieldset
                    %label{ :for => "email" } Email
                    != f.text_field :email, :id=>"email"
                    %label{ :for => "password" } Mot de passe
                    != f.password_field :password, :id=>"password"
                    != f.check_box :remember_me, :class=>"pull-left", :id=>"remember_me"
                    %label{ :for => "remember_me", :class=>"pull-left", :title => "Session de 2 jours" } Se souvenir
                .modal-footer
                  != f.submit :class => "btn btn-primary", :value => "OK"
                  %a{ :href=>"users/password/new", :class=>"btn" } Aide
                  %a{ :href=>"#", :class=>"modal-close btn" } Close
    
    != yield

    != render :partial => "/shared/google_analitycs"
    :plain
      <!--[if lt IE 9]>
        <script src="/javascripts/html5.js" type="text/javascript"></script>
      <![endif]-->
    - if params[:controller].in? %w(account/customers account/journals account/subscriptions)
      != javascript_include_tag 'application', 'inner', 'account/customers'
    - elsif params[:controller] == "account/scan/reportings" && params[:action] == "index"
      != javascript_include_tag 'application', 'inner', 'account/reporting'
    - elsif params[:controller] == "account/profiles" && params[:action] == "show"
      != javascript_include_tag 'application', 'inner', 'account/profile'
    - else
      != javascript_include_tag 'application', 'inner', 'account/documents'