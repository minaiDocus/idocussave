!!!
%html
  %head
    %title Idocus | Archivage numérique
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "Content-type" }/
    %meta{ :name => :description, :content => "#{@homepage.meta_description rescue ''}" }/
    = csrf_meta_tag
    - if ((params[:controller] == "account/documents/documents" && params[:action] == "reporting") || (params[:controller] == "account/profiles" && params[:action] == "show"))
      != stylesheet_link_tag %w(bootstrap.min bootstrap-responsive.min margin-padding-control.min application2)
    - else
      != stylesheet_link_tag %w(bootstrap.min bootstrap-responsive.min margin-padding-control.min ui-lightness/jquery-ui-1.8.5.custom file-uploader/jquery.fileupload-ui token-input-facebook.min application2)
      
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        %div{ :class => ((params[:controller] == "account/documents/documents" && params[:action] == "index2") ? "container-fluid" : "container") }
          %a{ :class=>"btn btn-navbar", "data-toggle"=>"collapse", "data-target"=>".nav-collapse" }
            %span{ :class=>"icon-bar" }
            %span{ :class=>"icon-bar" }
            %span{ :class=>"icon-bar" }
          %a{ :class=>"logo", :href=>"/" }
            != image_tag "logo/tiny_logo.png", :alt => "logo"
          .nav-collapse
            %ul{ :class=>"nav" }
              %li{ :class=>("active" if params[:controller] == "account/profiles") }
                != link_to "Mon compte", account_profile_path
              %li{ :class=>("active" if params[:controller] == "account/documents/documents" && params[:action] == "index") }
                != link_to "Documents", account_documents_path
              /
                %li
                  != link_to "Passer une nouvelle commande »", new_tunnel_order_path
          - if current_user
            %p{ :class=>"navbar-text pull-right" }
              Bienvenue
              != link_to current_user.email, account_documents_path
              |
              != link_to "déconnexion", destroy_user_session_path
          - else
            %p{ :class=>"navbar-text pull-right" }
              %a{ "data-toggle"=>"modal", :href=>"#connexion" } Connexion
              %span{ :class=>"divider-vertical" }
              %a{ :href=>"users/sign_up" } Créer un compte
            .modal{:id=>"connexion"}
              .modal-header
                %a{ :class=>"close", "data-dismiss"=>"modal" } ×
                %h3 Connexion
              - form_for User.new, :as => :user, :url => session_path(:user), :html => {:method => :post} do |f|
                .modal-body
                  %fieldset
                    %label{ :for => "email" } Email
                    != f.text_field :email, :id=>"email"
                    %label{ :for => "password" } Mot de passe
                    != f.password_field :password, :id=>"password"
                    != f.check_box :remember_me, :class=>"pull-left", :id=>"remember_me"
                    %label{ :for => "remember_me", :class=>"pull-left", :title => "Session de 2 jours" } Se souvenir
                .modal-footer
                  != f.submit :class => "btn btn-primary", :value => "OK"
                  %a{ :href=>"users/password/new", :class=>"btn" } Aide
                  %a{ :href=>"#", :class=>"modal-close btn" } Close
        
        
        
    != yield
    
    :plain
      <!--[if lt IE 9]>
        <script src="/javascripts/html5.js" type="text/javascript"></script>
      <![endif]-->
    - if (params[:controller] == "account/documents" && params[:action] == "reporting")
      != javascript_include_tag %w(jquery-1.7.1.min rails bootstrap.min reporting)
    - elsif (params[:controller] == "account/scan/reportings" && params[:action] == "index")
      != javascript_include_tag %w(jquery-1.7.1.min rails bootstrap.min tmpl.min reporting2)
    - else
      != javascript_include_tag %w(jquery-1.7.1.min jquery-ui-1.8.5.custom.min rails bootstrap.min tmpl.min file-uploader/load-image.min file-uploader/jquery.iframe-transport file-uploader/jquery.fileupload file-uploader/jquery.fileupload-ui file-uploader/application file-uploader/cors/jquery.xdr-transport.js jquery.tokeninput.min application application2)