!!!
%html
  %head
    %title Idocus | Archivage numérique
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "Content-type" }/
    %meta{ :name => :description, :content => "#{@homepage.meta_description rescue ''}" }/
    %link{ :rel => 'shortcut icon', :type => "image/ico", :href => asset_path('favicon.ico') }
    = csrf_meta_tag
    = stylesheet_link_tag 'application'
    = stylesheet_link_tag 'account/profiles' if controller_name == 'profiles'
    = stylesheet_link_tag 'account/retrievers' if controller_name.in? %w(retrievers provider_wishes retriever_transactions retrieved_banking_operations retrieved_documents bank_accounts)
    = stylesheet_link_tag 'account/charts' if controller_name.in? %w(operations balances)
    = stylesheet_link_tag 'account/organizations' if controller_name == 'organizations'

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a{ :class=>"btn btn-navbar", "data-toggle"=>"collapse", "data-target"=>".nav-collapse" }
            %span{ :class=>"icon-bar" }
            %span{ :class=>"icon-bar" }
            %span{ :class=>"icon-bar" }
          %a.logo{ href: site_url }
            %img{ src: logo_url, alt: 'logo' }
          = render partial: 'layouts/navigation'
          - if current_user
            %p{ :class=>"navbar-text pull-right" }
              Bienvenue
              != link_to current_user.email, account_documents_path
              |
              != link_to "déconnexion", destroy_user_session_path
          - else
            %p{ :class=>"navbar-text pull-right" }
              %a{ "data-toggle"=>"modal", :href=>"#connexion" } Connexion
              %span{ :class=>"divider-vertical" }
              %a{ :href=>"users/sign_up" } Créer un compte
            .modal{:id=>"connexion"}
              .modal-header
                %a{ :class=>"close", "data-dismiss"=>"modal" } ×
                %h3 Connexion
              - form_for User.new, :as => :user, :url => session_path(:user), :html => {:method => :post} do |f|
                .modal-body
                  %fieldset
                    %label{ :for => "email" } Email
                    != f.text_field :email, :id=>"email"
                    %label{ :for => "password" } Mot de passe
                    != f.password_field :password, :id=>"password"
                    != f.check_box :remember_me, :class=>"pull-left", :id=>"remember_me"
                    %label{ :for => "remember_me", :class=>"pull-left", :title => "Session de 2 jours" } Se souvenir
                .modal-footer
                  != f.submit :class => "btn btn-primary", :value => "OK"
                  %a{ :href=>"users/password/new", :class=>"btn" } Aide
                  %a{ :href=>"#", :class=>"modal-close btn" } Close

    - if current_user.is_admin && controller_name != 'organizations'
      .container-fluid
        = render 'shared/as_user'
    != content_for?(:content) ? yield(:content) : yield

    = render partial: '/shared/google_analytics'
    :plain
      <!--[if lt IE 9]>
        <script src="/javascripts/html5.js" type="text/javascript"></script>
      <![endif]-->
    - if controller_name == 'reporting' && action_name == 'show'
      = javascript_include_tag 'application', 'inner', 'account/reporting'
    - elsif controller_name == 'profiles' && action_name == 'show'
      = javascript_include_tag 'application', 'inner', 'account/profile'
    - elsif controller_name.in? %w(retrievers retriever_transactions retrieved_banking_operations retrieved_documents bank_accounts)
      = javascript_include_tag 'application', 'inner', 'account/retrievers'
    - elsif controller_name.in? %w(operations balances)
      = javascript_include_tag 'application', 'inner', 'aight.min', 'aight.d3.min', 'sizzle', 'd3', 'd3-tip', 'account/charts', "account/charts/#{controller_name}"
    - elsif controller_name == 'documents'
      = javascript_include_tag 'application', 'inner', 'account/documents'
