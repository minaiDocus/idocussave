%ul#notifications{ class: (current_user.try(:is_admin) && controller_name != 'organizations') ? '' : 'ml-auto'}
  %li.dropdown.dropdown-notifications
    %a.dropdown-toggle{ href: '#notifications-panel', data: { toggle: 'dropdown' } }
      %i.glyphicon.glyphicon-bell{ class: (@user.notifications.not_read.count > 0 ? 'notification-icon' : 'notification-icon-disabled'), data: { count: @user.notifications.not_read.count }, aria: { hidden: 'true' } }
    .dropdown-container.dropdown-position-bottomright
      .dropdown-toolbar
        .dropdown-toolbar-actions
        %h3 Notifications
      %ul.dropdown-menu.items
        - # notification items will be dynamically inserted here
      .dropdown-footer
        %a{ href: account_notifications_path }
          %i.icon-search
          Voir tout